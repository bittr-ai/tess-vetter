{
  "schema_version": "pipeline.composition.v1",
  "id": "fpp_validation_fast",
  "description": "Fast FPP workflow with report-seeded inputs.",
  "defaults": {
    "retry_max_attempts": 3,
    "retry_initial_seconds": 1.0
  },
  "steps": [
    {
      "id": "report_seed",
      "op": "report"
    },
    {
      "id": "resolve_stellar",
      "op": "resolve_stellar"
    },
    {
      "id": "fpp_prepare",
      "op": "fpp_prepare",
      "inputs": {
        "report_file": {"report_from": "report_seed"}
      }
    },
    {
      "id": "fpp",
      "op": "fpp_run",
      "inputs": {
        "preset": "fast",
        "prepare_manifest": {"port": "fpp_prepare.artifact_path"}
      }
    },
    {
      "id": "report_final",
      "op": "report",
      "inputs": {
        "report_file": {"report_from": "report_seed"}
      }
    }
  ]
}
